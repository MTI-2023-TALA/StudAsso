{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strictPropertyInitialization": false,
    "paths": {
      "@stud-asso/backend/migrations": ["libs/backend/migrations/src/index.ts"],
      "@stud-asso/backend/utils/base": ["libs/backend/utils/base/src/index.ts"],
      "@stud-asso/backend/utils/mock": ["libs/backend/utils/mock/src/index.ts"],
      "@stud-asso/frontend-core-api": ["libs/frontend/core/api/src/index.ts"],
      "@stud-asso/frontend-core-auth": ["libs/frontend/core/auth/src/index.ts"],
      "@stud-asso/frontend-core-storage": ["libs/frontend/core/storage/src/index.ts"],
      "@stud-asso/frontend-feature-school-create-association": [
        "libs/frontend/feature/school/create-association/src/index.ts"
      ],
      "@stud-asso/frontend-shared-formly": ["libs/frontend/shared/formly/src/index.ts"],
      "@stud-asso/frontend-shared-main-routing-component": ["libs/frontend/shared/main-routing-component/src/index.ts"],
      "@stud-asso/frontend-shared-modal": ["libs/frontend/shared/modal/src/index.ts"],
      "@stud-asso/frontend-shared-navbar": ["libs/frontend/shared/navbar/src/index.ts"],
      "@stud-asso/frontend-shared-table": ["libs/frontend/shared/table/src/index.ts"],
      "@stud-asso/frontend-shared-toast": ["libs/frontend/shared/toast/src/index.ts"],
      "@stud-asso/frontend/feature/school/association-page": [
        "libs/frontend/feature/school/association-page/src/index.ts"
      ],
      "@stud-asso/frontend/shared/tooltip": ["libs/frontend/shared/tooltip/src/index.ts"],
      "@stud-asso/shared/dtos": ["libs/shared/dtos/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
